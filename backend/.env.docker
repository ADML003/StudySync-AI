# Docker Development Environment Configuration
# Copy this file to .env for local Docker development

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://studysync:studysync123@postgres:5432/studysync_db
DB_HOST=postgres
DB_PORT=5432
DB_NAME=studysync_db
DB_USER=studysync
DB_PASSWORD=studysync123

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Supabase Configuration (required - get from your Supabase project)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Cerebras AI Configuration (required - get from Cerebras)
CEREBRAS_API_KEY=your_cerebras_api_key_here
CEREBRAS_BASE_URL=https://api.cerebras.ai/v1

# Security Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# CORS Settings
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=StudySync AI
VERSION=1.0.0
DESCRIPTION=AI-Powered Study Companion

# Performance Settings
WORKERS_COUNT=1
MAX_CONNECTIONS=100
KEEP_ALIVE=65

# Monitoring (Optional)
ENABLE_METRICS=false
METRICS_PORT=9000

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_FOLDER=/app/uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/studysync.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_BACKGROUND_TASKS=true
ENABLE_MEMORY_SYSTEM=true
ENABLE_HEALTH_CHECKS=true

# Development Settings
RELOAD=true
DEBUG_SQL=false
PROFILING_ENABLED=false

# Cache Settings
CACHE_TTL=3600  # 1 hour
ENABLE_REDIS_CACHE=true

# Email Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true

# Webhook Configuration (if using webhooks)
WEBHOOK_SECRET=your_webhook_secret_here